<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时间"/>
    <TextView
        android:id="@+id/text_view_dialog_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加分事项"/>
    <TextView
        android:id="@+id/text_view_dialog_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加分分值"/>
    <TextView
        android:id="@+id/text_view_dialog_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/button_delog_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        />
    <Button
        android:id="@+id/button_delog_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除"/>
</LinearLayout>