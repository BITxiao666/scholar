<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textview_delog_1st_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间："
        />
    <EditText
        android:id="@+id/editview_delog_1st_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_1st_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="加分事项："/>
    <EditText
        android:id="@+id/editview_delog_1st_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textview_1st_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加分分值"/>
    <EditText
        android:id="@+id/editview_delog_1st_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_delog_1st_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加" />

    <Button
        android:id="@+id/button_delog_1st_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消" />
</LinearLayout>
